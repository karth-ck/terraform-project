pipeline {
    agent any

    environment {
        TF_VAR_aws_region = 'ap-south-1'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/karth-ck/terraform-project.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Upload HTML') {
            steps {
                script {
                    def ip = sh(script: "terraform -chdir=terraform output -raw instance_ip", returnStdout: true).trim()
                    sh "scp -o StrictHostKeyChecking=no -i ~/.ssh/id_rsa html/index.html ec2-user@${ip}:/tmp/index.html"
                    sh "ssh -o StrictHostKeyChecking=no -i ~/.ssh/id_rsa ec2-user@${ip} 'sudo mv /tmp/index.html /var/www/html/index.html'"
                }
            }
        }
    }
}
